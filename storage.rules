rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Imagens de produtos (padrão): leitura pública, escrita apenas por admin
    match /product_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.role == 'admin';
    }

    // QR images: admin e pdv podem escrever
    match /product_qr_images/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.token.role == 'admin' || request.auth.token.role == 'pdv');
    }

    // Default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
